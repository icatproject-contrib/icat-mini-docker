#! /bin/sh

date=$(date +%y%m%d-%H%M%S)

dbdir=mariadb/var

mkdir -p $dbdir

dumpfile=$dbdir/icatdump-$date.sql

tmpfile=$(mktemp -p $dbdir)

sudo podman compose exec mariadb \
        mysqldump --routines --databases icat icat_authn_db > $tmpfile \
    && mv -n $tmpfile $dumpfile \
    && test ! -f $tmpfile \
    && chmod 0600 $dumpfile \
    || exit 1
